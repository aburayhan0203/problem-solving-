<body>
    <script>

        var friend = ["abir", "abdullah", "robin", "abdurrohim", "ali", "dhfdjfgshdfsds", "The name is Rayhan"]



        function longFriend(arr) {
            var long = arr[0];
            for (var i = 0; i < arr.length; i++) {
                var element = arr[i];
                if (long.length < element.length) {
                    long = element
                }
            }
            return long
        }
        var longword = longFriend(friend)
        console.log(longword)


    </script>
